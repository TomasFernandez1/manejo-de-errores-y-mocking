<div class='container'>
  <div class='wrapper-create-product'>
    <h2>Create Product</h2>
    <form action='/api/products/' method='post'>
      <div class='input-box'><input type='text' name='title' placeholder='Product 1' required /></div>

      <div class='input-box'><input type='text' name='description' placeholder='Test description' required /></div>

      <div class='input-box'><input type='number' name='price' placeholder='12.2' required /></div>

      <div class='input-box'><input type='number' name='stock' placeholder='12' required /></div>

      <div class='input-box'><input type='text' name='category' placeholder='Sports' required /></div>

      <div class='input-box button'>
        <input type='Submit' value='Create Product' />
      </div>
    </form>
    <link rel='stylesheet' href='/css/create-product.css' />
  </div>
</div>