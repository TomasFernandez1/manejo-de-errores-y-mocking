<div class="wrapper">
    <h2>Registration</h2>
  <form action="/api/sessions/register" method="POST" class="form-group w-50">
    <div class="input-box">
      <input type="text" name="first_name" placeholder="Javier" required />
    </div>

    <div class="input-box">
      <input type="text" name="last_name" placeholder="Gutierrez" required />
    </div>

    <div class="input-box">
      <input
        type="email"
        name="email"
        placeholder="ecommerce@gmail.com"
      />
    </div>

    <div class="input-box">
      <input
        type="number"
        name="age"
        placeholder="18"
        min="1"
        max="100"
        required
      />
    </div>
    <div class="input-box">
      <input type="password" name="password" placeholder="Password" required />
    </div>
    <div class="input-box button">
      <input type="Submit" value="Register Now" />
    </div>
    <div class="text">
      <h3>Already have an account? <a href="/api/view/login">Login now</a></h3>
    </div>
  </form>
  <link rel="stylesheet" href="/css/register.css">
</div>